<?php

/** @var \Magento\Checkout\Block\Cart\Item\Renderer $block */
$item = $block->getItem();
$product = $item->getProduct();

// Get the SKU. We'll rely on Alpine to check deliverability for this SKU.
$sku = $product->getSku();

// Note: We won't do `$isDeliverable = $product->getData('is_deliverable')` here;
// We'll handle everything in Alpine so it's consistent with the rest of your code.
?>
<tbody
    class="cart item bg-white even:bg-container-darker"
    x-data="{
        sku: '<?= $block->escapeJs($sku) ?>',
        init() {
            // Register the SKU so deliverability gets fetched/updated
            // if user changes location.
            DeliverabilityService.registerSku(this.sku);
        },
        // Alpine-based check:
        get isDeliverable() {
            // If 'Yes' => deliverable, else 'No' or undefined => not deliverable
            return Alpine.store('deliverability').map[this.sku] === 'Yes';
        }
    }">
    <tr class="item-info align-top ltr:text-left rtl:text-right ltr:lg:text-right rtl:lg:text-left flex flex-wrap lg:table-row">
